<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First_name</th>
      <th>Last_name</th>
      <th>Contact</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.contact %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', admin_user_path(user), class: "btn btn-info ml-2" %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-success ml-2" %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning ml-2" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: "btn btn-primary" %>

<div class="pagination mt-2">
  <%= paginate @users %>
</div>