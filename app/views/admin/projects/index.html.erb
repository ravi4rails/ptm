<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Projects</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Show', admin_project_path(project), class: "btn btn-info ml-2" %></td>
          <td><%= link_to 'Edit', edit_admin_project_path(project), class: "btn btn-success ml-2" %></td>
          <td><%= link_to 'Destroy', admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning ml-2" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Project', new_admin_project_path, class: "btn btn-primary" %>

  <div class="pagination mt-2">
    <%= paginate @projects %>
  </div>
</div>