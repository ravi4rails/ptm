<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @task.description %>
  </p>

  <p>
    <strong>Project:</strong>
    <%= @task.project.name %>
  </p>

  <%= link_to 'Edit', edit_admin_task_path(@task), class: "btn btn-success" %> 
  <%= link_to 'Back', admin_tasks_path, class: "btn btn-dark" %>
</div>