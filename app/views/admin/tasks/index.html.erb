<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Tasks</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Project</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.project.name %></td>
          <td><%= link_to 'Show', admin_task_path(task), class: "btn btn-info ml-2" %></td>
          <td><%= link_to 'Edit', edit_admin_task_path(task), class: "btn btn-success ml-2" %></td>
          <td><%= link_to 'Destroy', admin_task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning ml-2" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Task', new_admin_task_path, class: "btn btn-primary" %>

  <div class="pagination mt-2">
    <%= paginate @tasks %>
  <div class="pagination">
</div>